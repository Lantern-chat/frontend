{
    "name": "Lantern Chat",
    "short_name": "Lantern",
    "description": "Lantern Chat",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "default_locale": "en-US",
    "author": "Nova",
    "start_url": "/",
    "display": "fullscreen",
    "orientation": "portrait",
    "theme_color": "#fbda6c",
    "background_color": "#fbda6c",
    "icons": [],
    "app": {
        "urls": [
            "__BASE_URL__"
        ],
        "launch": {
            "web_url": "__BASE_URL__"
        },
        "background": {
            "scripts": []
        },
        "permissions": [
            "unlimitedStorage",
            "notifications",
            "fullscreen"
        ]
    }
}